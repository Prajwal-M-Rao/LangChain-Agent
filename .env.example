# Environment Configuration for Enhanced Wikipedia Agent

# API Keys (Optional - some tools work without API keys)
WOLFRAM_ALPHA_API_KEY=your_wolfram_alpha_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Model Configuration
MODEL_CACHE_DIR=./models
HF_HOME=./cache/huggingface

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# Cache Configuration
CACHE_DIR=./cache
CACHE_TYPE=disk
CACHE_MAX_SIZE=1000

# Performance Settings
TORCH_HOME=./cache/torch
TRANSFORMERS_CACHE=./cache/transformers
CUDA_VISIBLE_DEVICES=0

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
PROFILE_PERFORMANCE=false

# Database Configuration (for future extensions)
DATABASE_URL=sqlite:///./data/agent.db

# Security Settings
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_STORAGE=memory

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_EXPORT_INTERVAL=300

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_CONVERSATION_MEMORY=true
ENABLE_RESPONSE_CACHING=true